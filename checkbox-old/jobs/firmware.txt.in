plugin: local
name: firmware/fwts
requires: package.name == 'fwts'
_description: Automated tests for firmware using Firmware Test Suite.
user: root
command:
 cat << 'EOF' | run_templates -s 'fwts_test --list'
 plugin: shell
 name: firmware/fwts_$1
 requires: package.name == 'fwts'
 user: root
 command: fwts_test -t $1 -l $CHECKBOX_DATA/firmware/fwts_$1.log
 description: Run $1 test from Firmware Test Suite.
 EOF
