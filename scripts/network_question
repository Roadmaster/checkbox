#!/usr/bin/python

from hwtest.registry import RegistryManager
from hwtest.config import Config


config = Config()
config.load_path("/etc/hwtest.d/hwtest.conf")

registry = RegistryManager(config)
network_devices = registry.hal.eval_recursive("pci.device_class == 2")

for network_device in network_devices:
    print "%s %s" % (network_device.pci.vendor, network_device.pci.product)
